;assigns our datastructure to a new variable. There are three kinds of assignments available now : buchstabiertafel, flaggentafel, ... 
;(define tafel flaggentafel)

;adds an element to a given list
(define (addElement givenList element)
  (append givenList (list element)))

;remove the first element of a given list
(define (removeFirstElement givenList)
  (cdr givenList))

;returns the value for a given key from our cons datastructure (like a HashMap) 
(define (getKeyValue key tafel)
  (cdr (assoc key tafel)))

;returns a code made of our input string with the specific "tafel" datastructure
(define (getValueText keyText tafel)
(let ([resultList '()]
      [keyTextList (string->list keyText)])
  (flatten (convertValueText keyTextList resultList tafel))))

;recursice helper function to generate the key value for each character in the string
(define (convertValueText keyTextList resultList tafel)
  (if (= 0 (length keyTextList))
      '()
      (addElement (addElement resultList (getKeyValue (car keyTextList) tafel))
                  (convertValueText (removeFirstElement keyTextList) resultList tafel)) ))

;sample output
(getValueText "HELLOWORLD" flaggentafel)
(getValueText "HELLOWORLD" buchstabiertafel)
(getValueText "HELLOWORLD" morsealphabet)
(define (morse char)
  (system (string-append "spd-say" (string-append " \"" (cdr (assoc char morsealphabet)) "\""))))
(define (mylist->string list )
  (if (< 0 (length list))
      (let ([resultlist (string-append (car list) (mylist->string (cdr list)))])
        resultlist)
      ""))
(define (morse-code satz)
  (system (string-append "spd-say " " \"" (mylist->string (getValueText satz morsealphabet)) "\"")))
(morse-code "HELLOWORLD")
